<Window x:Class="DCS_Nexus.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Protocol" Grid.Row="0" Grid.Column="0" Margin="10">
            <StackPanel Margin="10" Width="230">
                <TextBlock Text="DCS Mode:"/>
                <ComboBox Name="DCSModeComboBox" SelectionChanged="DCSMode_SelectionChanged">
                    <ComboBoxItem>TCP</ComboBoxItem>
                    <ComboBoxItem>UDP</ComboBoxItem>
                </ComboBox>
                <TextBlock Text="Slave Mode:"/>
                <ComboBox Name="SlaveModeComboBox" SelectionChanged="SlaveMode_SelectionChanged">
                    <ComboBoxItem>TCP</ComboBoxItem>
                    <ComboBoxItem>UDP</ComboBoxItem>
                    <ComboBoxItem>Multicast</ComboBoxItem>
                </ComboBox>
                <TextBlock Text="DCS Mode may be changed at any time, Slave mode must match the mode during build time in Arduino IDE. To change the Slave Mode, you must reflash all your slaves."/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
